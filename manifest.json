{
  "manifest_version": 3,
  "name": "ScamCheck - Email Scam and Fraud Checker",
  "version": "1.3",
  "description": "AI Email Scam Checker - Check to detect email scams and fraudulent emails..",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://securetoken.googleapis.com/*",
    "https://identitytoolkit.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://mail.google.com/*"
      ],
      "js": ["dist/content.bundle.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "dist/background.bundle.js"
  },
  "icons": {
      "16": "dist/img/logo-small.png",
      "48": "dist/img/logo-small.png",
      "128": "dist/img/logo-small.png"
  },
  "action": {
    "default_popup": "dist/popup.html",
    "default_icon": {
      "16": "dist/img/logo-small.png",
      "48": "dist/img/logo-small.png",
      "128": "dist/img/logo-small.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none';"
  }
}